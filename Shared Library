  Dockerfile
   ARG DockerPullImg
   FROM ${nodejs:1.8.0}
   ARG  addressbook
   COPY ${addressbook} ./
   RUN tar -zxf addressbook
   RUN chown -R prabhu4tx:prabhu4tx /var/opt/app
   USER prabhu4tx
   
   Expose 5000
   CMD["node","."]
   
